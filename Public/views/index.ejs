<!doctype html>
<html lang="en">
    <head>
        <title>Gestor de tareas</title>
        <!-- Required meta tags -->
        <meta charset="utf-8" />
        <meta
            name="viewport"
            content="width=device-width, initial-scale=1, shrink-to-fit=no"
        />

        <link rel="stylesheet" href="/Style/style.css">

        <!-- Bootstrap CSS v5.2.1 -->
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
            crossorigin="anonymous"
        />
    </head>

    <body>
        <div class="container py-4">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1 class="h4">Gestor de tareas</h1>
                <a href="/creartarea" id="createBtn" class="btn btn-outline-primary">Crear nueva tarea</a>
            </div>
            <!-- Progress bar: porcentaje de tareas completadas -->
            <div class="tasks-box">
            <div class="mb-3">
                <div class="d-flex justify-content-between align-items-center mb-1">
                    <div>Progreso: <strong><%= (typeof completionRate !== 'undefined' ? completionRate : 0) %>%</strong></div>
                    <div><%= (typeof completedCount !== 'undefined' ? completedCount : 0) %> / <%= (typeof totalCount !== 'undefined' ? totalCount : (tasks ? tasks.length : 0)) %> completadas</div>
                </div>
                <div class="progress" style="height: 1.5rem;">
                    <div class="progress-bar bg-success" role="progressbar" style="width: <%= (typeof completionRate !== 'undefined' ? completionRate : 0) %>%" aria-valuenow="<%= (typeof completionRate !== 'undefined' ? completionRate : 0) %>" aria-valuemin="0" aria-valuemax="100">
                        <%= (typeof completionRate !== 'undefined' ? completionRate : 0) %> %
                    </div>
                </div>
            </div>
            
            <div id="tasksContainer" class="row">
                <% if (!tasks || tasks.length === 0) { %>
                    <div class="col-12">
                        <div class="alert alert-secondary">No hay tareas</div>
                    </div>
                <% } else { %>
                    <% tasks.forEach(function(t){ %>
                        <% 
                            const isCompleted = (t.completada && String(t.completada).toLowerCase() === 'si'); 
                            const cardOpacityClass = isCompleted ? 'opacity-50' : '';
                        %>
                        <div class="col-12 col-md-6 col-lg-4 mb-3">
                            <div class="card h-100 <%= cardOpacityClass %>">
                                <div class="card-body">
                                    <% if (!isCompleted) { %>
                                    <form method="POST" action="/tareas/<%= t.id_tarea %>/completar" style="display:inline">
                                        <button type="submit" class="btn btn-success">Completar tarea</button>
                                    </form>
                                    <% } else { %>
                                        <span class="badge bg-success mb-2">Tarea Completada</span>
                                        <% } %>
                                    <h3 class="card-title"><%= t.titulo || 'Sin título' %></h3>
                                    <p class="card-text"><%= t.descripcion || '-' %></p>
                                    <p class="card-text"><strong>Docente:</strong> <%= t.nombre || '-' %></p>
                                    <p class="card-text"><strong>Curso:</strong> <%= t.nombre_curso || '-' %></p>
                                    <p class="card-text"><strong>Completada:</strong> <%= (t.completada) %></p>
                                </div>
                                <div class="card-footer d-flex justify-content-between align-items-center">
                                    <small class="text-muted"><%= (t.fecha_entrega_formatted) %></small>
                                    <div>
                                        <form method="GET" action="/editar/<%= t.id_tarea %>" style="display:inline;">
                                            <button type="submit" class="btn btn-sm btn-outline-info mb-1" <%= isCompleted ? 'disabled' : '' %>>Editar</button>
                                        </form>
                                        <form method="POST" action="/tareas/<%= t.id_tarea %>/eliminar" style="display:inline;" 
                                            onsubmit="return confirm('¿Estás seguro de que quieres eliminar esta tarea?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">Eliminar</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                <% } %>
            </div>
        </div>
    </div>
        
        <!-- Bootstrap JavaScript Libraries -->
        <script
            src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
            integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
            crossorigin="anonymous"
        ></script>

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
            integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
            crossorigin="anonymous"
        ></script>
        <!-- SweetAlert2: mostrar mensaje simple cuando exista `mensaje` -->
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            <% if (typeof mensaje !== 'undefined' && mensaje) { %>
                Swal.fire({
                    title: '¡Éxito!',
                    text: '<%= mensaje %>',
                    icon: 'success'
                }).then(function() {
                    try { history.replaceState(null, '', window.location.pathname); } catch(e) {}
                });
            <% } %>
        </script>
    </body>
</html>
