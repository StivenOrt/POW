<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Crear curso</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  </head>
  <body>
    <div class="container py-4">
      <div class="row">
        <div class="col-12 col-md-8 offset-md-2">
          <h2>Crear nuevo curso</h2>
          <form method="POST" action="/crearcurso">
            <div class="mb-3">
              <label for="nombre_curso" class="form-label">Nombre del curso</label>
              <input id="nombre_curso" name="nombre_curso" class="form-control" required />
            </div>

            <div class="mb-3">
              <label for="id_docente" class="form-label">Docente (opcional)</label>
              <select id="id_docente" name="id_docente" class="form-select">
                <option value="">-- Ninguno --</option>
                <% if (docentes && docentes.length) { %>
                  <% docentes.forEach(function(d){ %>
                    <option value="<%= d.id_docente %>"><%= d.nombre %></option>
                  <% }) %>
                <% } %>
              </select>
            </div>

            <div class="d-flex gap-2">
              <button class="btn btn-primary" type="submit">Crear curso</button>
              <a class="btn btn-secondary" href="/creartarea">Volver</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
